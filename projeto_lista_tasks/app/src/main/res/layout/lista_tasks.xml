<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageAvatarTask"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_margin="@dimen/magin_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/textNomeTarefa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome da tarefa"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginStart="@dimen/magin_default"
        android:layout_marginEnd="@dimen/magin_default"
        app:layout_constraintStart_toEndOf="@id/imageAvatarTask"
        app:layout_constraintTop_toTopOf="@id/imageAvatarTask"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="0dp"
        android:layout_height="50sp"
        android:layout_marginStart="@dimen/magin_default"
        android:layout_marginEnd="@dimen/magin_default"
        android:text="Descrition"
        app:layout_constraintTop_toBottomOf="@id/textNomeTarefa"
        app:layout_constraintStart_toEndOf="@id/imageAvatarTask"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/buttonExcluir"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginEnd="@dimen/magin_default"
        android:layout_marginTop="@dimen/magin_default"
        android:layout_marginBottom="@dimen/magin_default"
        android:text="Excluir"
        android:textSize="10sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/buttonInfo"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginStart="@dimen/magin_default"
        android:layout_marginBottom="@dimen/magin_default"
        android:layout_marginTop="@dimen/magin_default"
        android:text="Info"
        android:textSize="10sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/imageAvatarTask"
        app:layout_constraintTop_toBottomOf="@id/textDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:id="@+id/separateLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:alpha="0.12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>