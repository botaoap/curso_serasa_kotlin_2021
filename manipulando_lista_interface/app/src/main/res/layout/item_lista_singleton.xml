<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ImageViewLogoSingleton"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="@dimen/margin_default"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/TextViewNomeSingleton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ImageViewLogoSingleton"
        app:layout_constraintTop_toTopOf="@id/ImageViewLogoSingleton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:text="Nome"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/TextViewDescriptionSingleton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ImageViewLogoSingleton"
        app:layout_constraintTop_toBottomOf="@id/TextViewNomeSingleton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/margin_default"
        android:text="Description"
        android:textStyle="italic"
        />

    <Button
        android:id="@+id/ButtonDeleteSingleton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintStart_toEndOf="@id/ImageViewLogoSingleton"
        app:layout_constraintTop_toBottomOf="@id/TextViewDescriptionSingleton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:id="@+id/ViewLineSingleton"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:alpha="0.20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ImageViewLogoSingleton"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>