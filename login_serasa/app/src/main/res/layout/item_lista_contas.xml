<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewAvatarContas"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginBottom="@dimen/margin_default"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/texteViewTitleConta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/imageViewAvatarContas"
        app:layout_constraintTop_toTopOf="@id/imageViewAvatarContas"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/texteViewValorConta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_fields"
        android:text="Valor"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/imageViewAvatarContas"
        app:layout_constraintTop_toBottomOf="@id/texteViewTitleConta"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/texteViewDescriptionConta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_fields"
        android:text="Descriptiom"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/imageViewAvatarContas"
        app:layout_constraintTop_toBottomOf="@id/texteViewValorConta"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/viewLineConta"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:alpha="0.20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewAvatarContas"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>